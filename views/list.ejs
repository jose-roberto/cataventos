<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Henny+Penny&display=swap" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="/javascripts/list_script.js" defer></script>

    <title>Lista - <%= list.name %>
    </title>
</head>

<body class="bg-main">
    <%- include('navbar') %>
        <div class="container page-content">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title m-3">
                            <%= list.name %>
                        </h3>
                        <div class="d-flex align-items-center">
                            <img src="/images/user_photo.png" alt="Logo" class="rounded-circle me-2" width="40"
                                height="40">
                            <a class="fs-4 me-3 text-dark" href="profile">User</a>
                            <div class="btn-group">
                                <button type="button" class="btn border-0 fw-bold" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="bi bi-three-dots fs-3"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><button id="editButton" class="dropdown-item" data-bs-toggle="modal"
                                            data-bs-target="#editModal">Editar</button></li>
                                    <li><a class="dropdown-item text-danger" href="/user/logout">Excluir</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <p class="card-text ms-3 fs-5">
                        <%= list.description %>
                    </p>
                    <hr class="border-danger-subtle border-3 opacity-75">
                    <div id="list_texts">

                    </div>
                </div>
            </div>
        </div>

        <!-- Modal de Edição -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="editModalLabel">Editar Lista</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/list/update_list?_method=PUT" method="POST">
                            <div class="mb-3">
                                <label for="list_title" class="form-label">Título da Lista</label>
                                <input required type="text" class="form-control" name="list_title" id="list_title"
                                    value="<%= list.name %>">
                            </div>
                            <div class="mb-3">
                                <label for="list_description" class="form-label">Descrição</label>
                                <textarea required class="form-control" name="list_description" id="list_description"
                                    rows="3"><%= list.description %></textarea>
                            </div>
                            <hr>
                            <h5>Itens da Lista</h5>
                            <div id="list_texts_modal">
                                <!-- <div class="d-flex justify-content-between align-items-center p-2 border rounded mb-2">
                                    <h6 class="m-0">
                                        <a href="/text/${text.id}" class="text-decoration-none">${text.title}</a>
                                    </h6>
                                    <button  class="btn btn-sm btn-danger" title="Remover item">
                                        <i data-id="${text.id}" class="bi bi-trash-fill"></i>
                                    </button>
                                </div> -->
                            </div>
                            <button type="submit" class="btn btn-primary mt-3 w-100">Salvar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>