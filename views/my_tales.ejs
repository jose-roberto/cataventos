<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Henny+Penny&display=swap" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="/javascripts/text_script.js" defer></script>


    <title>Meus Contos</title>
</head>

<body class="bg-main">
    <%- include('navbar') %>

        <div class="container page-content">
            <!-- Título centralizado -->
            <div class="row justify-content-center text-center mb-2">
                <div class="col-12 fw-bold">
                    <h3 class="display-5 title-gradient title-underline">Crie seu conto</h3>
                </div>
            </div>

            <!-- Barra de busca + Botão -->
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 d-flex align-items-center gap-2">
                    <form class="flex-grow-1">
                        <div class="position-relative">
                            <input id="search_input" class="form-control rounded-pill ps-5" type="search"
                                placeholder="Buscar contos" aria-label="Search">
                            <span class="position-absolute top-50 start-0 translate-middle-y ps-3">
                                <i class="bi bi-search"></i>
                            </span>
                        </div>
                    </form>
                    <button type="button" class="btn btn-brown fw-semibold" data-bs-toggle="modal"
                        data-bs-target="#createTextModal">
                        <i class="bi bi-plus-square me-2 "></i>Criar
                    </button>
                </div>
            </div>

            <!-- MODAL -->
            <div class="modal fade" id="createTextModal" tabindex="-1" aria-labelledby="createTextModal"
                aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5">Crie seu conto</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/text/create_text" method="POST">
                                <div class="mb-3">
                                    <label for="title" class="col-form-label fw-semibold">Título:</label>
                                    <input type="text" class="form-control" id="title" name="title" required>
                                </div>
                                <div class="btn-group mt-2" role="group">
                                    <input type="radio" class="btn-check" name="style" id="tale" autocomplete="off"
                                        checked>
                                    <label class="btn btn-outline-primary" for="tale">Conto</label>

                                    <input type="radio" class="btn-check" name="style" id="poem" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="poem">Poema</label>
                                </div>
                                <div class="mb-3">
                                    <label for="text" class="col-form-label fw-semibold">Conto:</label>
                                    <textarea class="form-control form-text" id="text" placeholder="Digite seu conto"
                                        maxlength="5000" name="text" required></textarea>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label for="genre" class="col-form-label fw-semibold">Gênero literário:</label>
                                    <select class="form-control" id="genre" name="genre" required>
                                        <option value="">Selecione um gênero</option>
                                    </select>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary"
                                        data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Criar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Linha separadora -->
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="separator-line"></div>
                </div>
            </div>

            <!-- Meus Contos (Centralizado) -->
            <div class="row justify-content-center mb-5">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6" id="my_tales">

                    </div>
                </div>

            </div>
        </div>
</body>

</html>